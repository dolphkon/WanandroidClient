<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp_20"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="66dp"
        android:src="@drawable/icon_wanandroid"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_height="66dp">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/dp_20"
        android:background="@drawable/common_item_bg"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_account" />

        <com.dolphkon.wanandroidclient.ClearEditText
            android:id="@+id/edit_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:layout_marginLeft="@dimen/dp_28"
            android:hint="用户名/手机号">

        </com.dolphkon.wanandroidclient.ClearEditText>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@color/common_tv_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/common_item_bg"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/dp_20">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_password" />

        <com.dolphkon.wanandroidclient.ClearEditText
            android:id="@+id/edit_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/password">
        </com.dolphkon.wanandroidclient.ClearEditText>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@color/common_tv_gray"/>

    <LinearLayout
        android:id="@+id/ll_repassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
           android:visibility="gone"
        android:background="@drawable/common_item_bg"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/dp_20">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_password" />

        <com.dolphkon.wanandroidclient.ClearEditText
            android:id="@+id/edit_repassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/repassword">
        </com.dolphkon.wanandroidclient.ClearEditText>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@color/common_tv_gray"/>

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:textColor="@color/common_tv_gold"
        android:text="注册账号"
        android:layout_gravity="right"
        android:padding="@dimen/dp_20"
        android:layout_height="wrap_content">

    </TextView>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58"
        android:layout_marginTop="@dimen/dp_58"
        android:background="@drawable/btn_bg"
        android:text="登录"
        android:textColor="@color/tv_white">
    </Button>

</LinearLayout>
